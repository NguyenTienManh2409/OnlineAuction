    <script>


        function handleUpdateSubcategory() {

            const id = global_id;
            const name = global_name;
            const newName = $("#nameUpdateSub").val();

            // call axios post data contain id and name
            axios.post('/admin/updatesubcategory', {
                id: id,
                name: name,
