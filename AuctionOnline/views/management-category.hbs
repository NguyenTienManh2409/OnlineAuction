<style>
    .accordion {
        width: 90%;
        max-width: 1000px;
        margin: 2rem auto;
    }

    .accordion-item {
        background-color: #fff;
        color: #111;
        margin: 1rem 0;
        border-radius: 0.5rem;
        box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.25);
    }

    .accordion-item-header {
        padding: 0.5rem 3rem 0.5rem 1rem;
        min-height: 3.5rem;
        line-height: 1.25rem;
        font-weight: bold;
        display: flex;
        align-items: center;
        position: relative;
        cursor: pointer;
    }

    .accordion-item-header::after {
        content: "\002B";
        font-size: 2rem;
        position: absolute;
        right: 1rem;
    }

    .accordion-item-header.active::after {
        transform: rotate(45deg);
    }

    .accordion-item-body {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.2s ease-out;
    }

    .accordion-item-body-content {
        overflow: hidden;
        padding: 1rem;
        line-height: 1.5rem;
        border-top: 1px solid #34495e;
    }


    /* create pop-up menu */
    .modal-cat {
        display: none;
        align-items: center;
        justify-content: center;
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.4);
    }

    .modal-cat.open {
        display: flex;
    }

    .modal-sub-cat {
        display: none;
        align-items: center;
        justify-content: center;
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.4);
    }

    .modal-sub-cat.open {
        display: flex;
    }

    .modal-edit-sub-cat {
        display: none;
        align-items: center;
        justify-content: center;
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.4);
    }

    .modal-edit-sub-cat.open {
        display: flex;
    }

    .modal-edit-cat {
        display: none;
        align-items: center;
        justify-content: center;
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.4);
    }

    .modal-edit-cat.open {
        display: flex;
    }

    .modal-container {
        position: relative;
        background: #fff;
        width: 900px;
        max-width: calc(100% - 32px);
        min-height: 200px;
        animation: modalFadeIn ease 0.5s;
    }

    .modal-header-cat {
        background: #009688;
        height: 130px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 30px;
        color: #fff;
    }

    .modal-close {
        position: absolute;
        right: 0;
        top: 0;
        padding: 12px;
        color: #fff;
        cursor: pointer;
        opacity: 0.8;
    }

    .modal-close:hover {
        opacity: 1;
    }

    .i-header {
        margin-right: 16px;
    }

    .modal-body-cat {
        padding: 16px;
    }

    .modal-label-cat {
        display: block;
        font-size: 15px;
        margin-bottom: 1rem;
    }

    .modal-input-cat {
        border: 1px solid #ccc;
        width: 100%;
        padding: 10px;
        font-size: 15px;
        margin-bottom: 1rem;
    }

    #add-cat {
        background: #009688;
        border: none;
        width: 100%;
        font-size: 15px;
        text-transform: uppercase;
        padding: 18px;
        color: #fff;
        cursor: pointer;
    }

    #add-cat:hover {
        opacity: 0.9;
    }

    @keyframes modalFadeIn {
        from {
            opacity: 0;
            transform: translateY(-150px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="container-fluid animatedParent animateOnce my-3">
    <div class="d-flex justify-content-between">
        <h1>List category</h1>
        <a href="#">
            <button type="button" class="js-add-cat btn btn-primary btn-lg r-20"><i class="icon icon-add"></i>Add
                category
            </button>
        </a>
    </div>
    <div class="progress progress-xs mb-3 mt-3">
        <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0"
             aria-valuemax="100"></div>
    </div>
    <ul class="accordion">
        {{#each categories}}

            <li class="accordion-item">
                <div class="accordion-item-header d-flex justify-content-between">
                    <div>
                        {{name}}
                        <span class="btn-fab btn-fab-sm shadow btn-success">{{amount}}</span>
                    </div>
                    <div class="modify-cat">
                        <span class="btn-fab btn-fab-sm shadow btn-info js-add-sub-cat"
                              onclick="setGlobalId(`{{_id}}`)"><i class="icon-add"></i></span>
                        <span class="btn-fab btn-fab-sm shadow btn-warning js-edit-cat"
                              onclick="setGlobalId(`{{_id}}`)"><i
                                class="icon-edit"></i></span>
                        <span class="btn-fab btn-fab-sm shadow btn-danger" onclick="handleDeleteCategory(`{{_id}}`)"><i
                                class="icon-trash-can"></i></span>
                    </div>
                </div>
                <div class="accordion-item-body">
                    <ul class="accordion-item-body-content">
                        {{#each subCat}}
                            <li class="m-3">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        {{name}}
                                        <span class="btn-fab btn-fab-sm shadow btn-success">{{number}}</span>
                                    </div>
                                    <div>
                                <span class="btn-fab btn-fab-sm shadow btn-warning js-modal-sub-cat-modify js-edit-sub-cat"
                                      style="cursor: pointer;"
