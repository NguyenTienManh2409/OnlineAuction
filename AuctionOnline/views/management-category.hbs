                                              onclick="handleDeleteSubcategory(`{{../_id}}`, `{{name}}`)"><i
                                                class="icon-trash-can"></i></span>
                                    </div>
                                </div>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </li>


        {{/each}}

    </ul>
</div>

